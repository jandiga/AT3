<%- include('header.ejs') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Team Management</h1>
                <div>
                    <button class="btn btn-outline-secondary" onclick="loadCurrentUserTeams(1)">
                        <i class="bi bi-arrow-clockwise"></i> Refresh
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Teams in Active Leagues -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Your Teams in Active Leagues</h5>
                </div>
                <div class="card-body">
                    <div id="userTeamsContainer">
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2">Loading your teams...</p>
                        </div>
                    </div>
                    <div class="text-center mt-3">
                        <button id="loadMoreTeamsBtn" class="btn btn-outline-primary" onclick="loadMoreTeams()" style="display: none;">
                            <i class="bi bi-arrow-down-circle"></i> Load More Teams
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/team-management.js"></script>
<%- include('footer.ejs') %>