<%- include('header.ejs') %>

<div class="container mt-4">
    <h2>Player Details</h2>
    
    <div class="card">
        <div class="card-body">
            <form action="/api/players/create" method="POST" id="playerForm">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="studentName" class="form-label">Student Name</label>
                            <input type="text" class="form-control" id="studentName" name="studentName" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="classCode" class="form-label">Class Code</label>
                            <input type="text" class="form-control" id="classCode" name="classCode" 
                                   value="<%= user.classCode %>" readonly>
                        </div>

                        <div class="mb-3">
                            <label for="academicScore" class="form-label">Initial Academic Score</label>
                            <input type="number" class="form-control" id="academicScore" name="academicScore" 
                                   min="0" max="100" value="0">
                        </div>

                        <div class="mb-3">
                            <label for="effortScore" class="form-label">Initial Effort Score</label>
                            <input type="number" class="form-control" id="effortScore" name="effortScore" 
                                   min="0" max="100" value="0">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="notes" class="form-label">Additional Notes</label>
                            <textarea class="form-control" id="notes" name="notes" rows="4"></textarea>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="isEligibleForDraft" 
                                   name="isEligibleForDraft" checked>
                            <label class="form-check-label" for="isEligibleForDraft">
                                Eligible for Draft
                            </label>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Create Player</button>
            </form>
        </div>
    </div>

    <div id="alertMessage" class="alert mt-3" style="display: none;"></div>
</div>

<%- include('footer.ejs') %>